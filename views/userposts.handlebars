<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          <h4><i class="fas fa-scroll"></i> Your Posts</h4>
        </span>
        <p>Select a post to Edit or Delete</p>
        {{#each posts as |post| }}
        <div class="section">
          <span class="card-title">
            <a href="/udpost/{{post.id}}">
              {{post.title}}
            </a>
          </span>
          <p class="right"><i class="fas fa-pen-alt"></i>
            {{format_date post.date_created}}
          </p>
        </div>
        <div class="divider"></div>
        {{/each}}
        <div class="section">
          <a href="./post" class="button-style btn"><i class="far fa-edit"></i>Create</a>
        </div>
      </div>
    </div>
  </div>
</div>